{
  "compilerOptions": {
    "target": "es5",
    "allowJs": true,
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "module": "commonjs",  // Because webpack loaders don't work in ES6.....
    "moduleResolution": "node",
    "outDir": "../lib",
    "skipLibCheck": true,
    "strict": true,
  },
  "include": ["."]
}
